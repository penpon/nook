FROM node:18-alpine AS builder

WORKDIR /app

# package.jsonをコピー（キャッシュ効率化）
COPY nook/frontend/package*.json ./

# 依存関係インストール
RUN npm ci

# ソースコードをコピー
COPY nook/frontend .

# 環境変数を設定
ENV VITE_API_URL=/api

# 本番ビルド
RUN npm run build

# ビルド結果を保存
FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/dist ./dist